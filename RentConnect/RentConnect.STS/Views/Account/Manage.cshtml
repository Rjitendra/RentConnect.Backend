@model ManageViewModel

<div class="page-header text-center">
    <h3>Managing @Model.FirstName @Model.LastName</h3>
</div>

<partial name="_ValidationSummary" />


<div class="row">
    <div class="col-sm-6 mx-auto">
        <div class="login-page bg-light">
            <form method="post" autocomplete="off">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="@Model.Email" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="@Model.FirstName" class="form-control" placeholder="Enter your first name..." />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="@Model.LastName" class="form-control" placeholder="Enter your last name..." />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserRoles"></label>
                    <select asp-for="UserRoles" asp-items="Model.AvailableRoles" multiple class="form-control"></select>
                </div>
                <button type="submit" class="btn btn-success">Save</button>
                <a asp-action="search" class="btn btn-default">Cancel</a>
            </form>
        </div>
    </div>
</div>